{% extends 'base.html.twig' %}

{% block title %}
	Formulaire de dépôt
{% endblock %}

{% block body %}
	<div class="container-fluid mb-100">
		<a  href="{{ relative_path('http://azertyfrance.fr') }}"> <img class="retour" src="{{asset('/images/retour.png')}}"/> </a>
		<img class="img-center" src="{{asset('/images/azertylogo.png')}}"/>
		<h1 class="mt-3">Formulaire de dépôt d’appareils informatiques</h1>
		<div class="card" style="width: 60%; margin:auto;margin-bottom:150px; padding : 30px;">
			
		{{ form_start(form,{ 'attr': { 'class' : 'form-material form cacher ' } })}}
		<h2>Informations clients</h2>
			<div class="form-group">
				{% for child in form.client.personne %}

					<div class="form-check">
						{{form_widget(child , { 'attr': { 'class' : 'form-check-input'} })}}
						<label class="form-check-label" style='margin-right : 10px !important'>{{form_label(child)}}</span>
					</div>

				{% endfor %}
			</div>


			<div class="grix xs1 sm2">
				<div class="form-field">
					{{form_widget(form.client.nom , { 'attr': { 'class' : 'form-control rounded-1 required ', 'id':'nom' } })}}
					<label for="nom">Nom</label>
				</div>
				<div class="form-field ">
					{{form_widget(form.client.prenom , { 'attr': {  'class' : 'form-control rounded-1 required', 'id':'prenom' } })}}
					<label for="pernom">Prénom</label>
				</div>
			</div>
			<div class="grix xs1 sm2">
				<div class="form-field">
					{{form_widget(form.client.mail , {'attr': {  'class' : 'form-control rounded-1 required', 'id':'mail' }})}}
					<label for="mail">Mail</label>
				</div>
				<div class="form-field ">
					{{form_widget(form.client.tel , {'attr': {  'class' : 'form-control rounded-1 required', 'id':'tel' } })}}
					<label for="tel">Téléphone</label>
				</div>
			</div>
			<div class="grix xs1 sm2">
				<div class="form-field">
					{{form_widget(form.client.rue , {'attr': {  'class' : 'form-control rounded-1 required', 'id':'rue' } })}}
					<label for="rue">Rue</label>
				</div>
				<div class="form-field">
					{{form_widget(form.client.ville , {'attr': {  'class' : 'form-control rounded-1 required', 'id':'ville' } })}}
					<label for="ville">Ville</label>
				</div>
			</div>
			<div class="grix xs1 sm2">
				<div class="form-field ">
					{{form_widget(form.client.cp , {'attr': {  'class' : 'form-control rounded-1 required', 'id':'cp' } })}}
					<label for="cp">Code Postal</label>
				</div>
				<div class="form-field "></div>
			</div>
			<h2>Informations de l'appareil</h2>
			<div class="grix xs1 sm2">
				<div class="form-field">
					{{form_widget(form.appareil.marque , {'attr': {  'class' : 'form-control rounded-1 required', 'id':'marque' } })}}
					<label for="marque">Marque</label>
				</div>
				<div class="form-field">
					{{form_widget(form.appareil.modele , { 'attr': {  'class' : 'form-control rounded-1', 'id':'modele' }})}}
					<label for="modele">Modele</label>
				</div>
			</div>
			<div class="grix xs1 sm2">
				<div class="form-field">
					{{form_widget(form.appareil.ns , { 'attr': {  'class' : 'form-control rounded-1', 'id':'ns' } })}}
					<label for="ns">Numéro de série</label>
				</div>
				<div class="form-field">
					{{form_widget(form.appareil.mdp , { 'attr': {  'class' : 'form-control rounded-1', 'id':'mdp' } })}}
					<label for="mdp">Mot de Passe</label>
				</div>
			</div>
			<div class="grix ">
				<div class="form-field">
					{{form_widget(form.appareil.prblm , { 'attr': {  'class' : 'form-control rounded-1', 'id':'prblm' } })}}
					<label for="prblm">Problème rencontré</label>
				</div>
			</div>
			<div class="form-group">
				<div class="form-check">

					{{form_widget(form.appareil.chargeur )}}
					{{form_label(form.appareil.chargeur )}}

				</div>
			</div>
			<div class="form-group">
				<div class="form-check inline">

					{{form_widget(form.cu)}}
					{{form_label(form.cu,null,{ 'attr': {  'class' : 'form-control rounded-1 cu inline required'} })}}
				 	
				</div>
				&nbsp; <a class="inline" href="{{path('condition')}}">  conditions de prise en charge</a>
			</div>
			<div class="mb-3 mt-5 text-center">
				<button type="submit" class="btn btn-dark btn-depot submit" >Valider</button>
			</div>
			
			
		

		{{ form_end(form) }}
		{% for message in app.flashes('message')%}
				<div class="wrapper"> 
					<svg class="checkmark" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 52 52">
						<circle class="checkmark__circle" cx="26" cy="26" r="25" fill="none" />
					<path class="checkmark__check" fill="none" d="M14.1 27.2l7.1 7.2 16.7-16.8" />
					</svg>
				</div>
				{#<img src="{{asset('/images/checkmarker.svg')}}"/>#}
				<div class="alert alert-success center" role="alert" id="sucess">
					<span>{{message}}<span>
				</div>
			{% endfor %}
		</div>

	</div>
	</div>
	<div class="loading" id="loading">
		<div class="loadingio-spinner-bean-eater-9bccoyxbzpc">
			<div class="ldio-rd9g19yom4p">
				<div><div></div><div></div><div></div></div><div><div></div><div></div><div></div></div>
			</div>
		</div>
	</div>
	{% include 'layout/footer.html.twig' %}

{% endblock %}

